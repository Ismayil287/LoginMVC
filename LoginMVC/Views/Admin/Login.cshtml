                    </form>

                </div>
                <div class="w3l_form align-self">
                    <div class="left_grid_info">
                        <img src="~/images/1.png" class="img-fluid" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="copyright text-center">
        <p class="copy-footer-29">
            © 2023 Admin Login Form. All rights reserved
        </p>
    </div>
</section>x